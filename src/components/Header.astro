---
// src/components/Header.astro
import Typewriter from './Typewriter.astro'; 

---
<header class="main-header">
    <nav class="nav-container">
        <a href="#intro" class="logo">
            &lt;<span>/</span>&gt; <Typewriter text="Murilo Moreira Mognon" delay={75} />
        </a>

        <ul class="nav-links">
            <li><a href="#Intro">Intro</a></li>
            <li><a href="#habilidades">Skills</a></li>
            <li><a href="#projetos">Projetos</a></li>
            <li><a href="#contato">Contato</a></li>
            
            <li class="social-icon">
                <a href="https://github.com/mognon-murilo" target="_blank" aria-label="Github">
