---
// Importe o componente de cabeçalho
import Header from '../components/Header.astro';

// Propriedade para definir o título da página
const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="pt-BR">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<Header />
		<slot />
	</body>
</html>

<style is:global>
	html,
	body {
		margin: 0;
		padding: 0;
		width: 100%;
		height: 100%;
		font-family: system-ui, sans-serif;
	}

	/* Estilos globais para o tema escuro e fontes */
	body {
		background-color: #0d1117;
		color: #c9d1d9;
		line-height: 1.5;
	}
	
	h1, h2, h3, h4, h5, h6 {
		font-family: 'Arial', sans-serif; /* Exemplo de fonte */
	}

	a {
		color: inherit;
		text-decoration: none;
	}

	/* Estilos para o conteúdo principal, para evitar que o header o cubra */
	main {
		padding-top: 0rem; /* A altura do seu cabeçalho fixo */
	}
</style>